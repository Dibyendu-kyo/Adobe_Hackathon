{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd adobe-scan-portal && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd adobe-scan-portal && npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "PYTHONPATH": "/app",
        "MODELS_PATH": "/app/models"
      }
    }
  }
}